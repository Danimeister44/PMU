<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_result">

    <TextView
        android:id="@+id/ispis"
        android:layout_width="289dp"
        android:layout_height="187dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="132dp"
        android:text="Rezultat"

        android:textSize="12pt"
        app:layout_constraintBottom_toTopOf="@+id/textViewResultBMI"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textViewResultBMI"
        android:layout_width="305dp"
        android:layout_height="118dp"
        android:layout_marginBottom="92dp"
        android:text="Kalkulacija BMI-a"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.363"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="330dp"
        android:layout_height="214dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="228dp"
        android:text="Kategorije:\n
	\u003c 18.5 = Pothranjenost \n
	18.5 – 24.9 = Normalna težina \n
	25 – 29.9 = Prekomerna težina \n
	\u2265 30 = Gojaznost"
        android:textSize="10pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonDetail"
        android:layout_width="281dp"
        android:layout_height="65dp"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="#8C601F"
        android:text="detalji"
        android:textSize="12pt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>